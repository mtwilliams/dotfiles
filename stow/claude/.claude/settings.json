{
  "permissions": {
    "allow": [
      "Bash(bc:*)",
      "Bash(cargo --version:*)",
      "Bash(clang --version:*)",
      "Bash(diff:*)",
      "Bash(docker --version:*)",
      "Bash(du:*)",
      "Bash(expr:*)",
      "Bash(file:*)",
      "Bash(find:*)",
      "Bash(gcc --version:*)",
      "Bash(git blame:*)",
      "Bash(git branch:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git ls-files:*)",
      "Bash(git ls-tree:*)",
      "Bash(git remote -v:*)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(make --version:*)",
      "Bash(nl:*)",
      "Bash(node --version:*)",
      "Bash(npm --version:*)",
      "Bash(pnpm --version:*)",
      "Bash(python --version:*)",
      "Bash(python3 --version:*)",
      "Bash(rg:*)",
      "Bash(rustc --version:*)",
      "Bash(seq:*)",
      "Bash(sha256sum:*)",
      "Bash(stat:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(xxd:*)",
      "Bash(yq:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.dotfiles/bin/chime"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.dotfiles/bin/chime"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.dotfiles/bin/chime"
          }
        ]
      }
    ]
  }
}
